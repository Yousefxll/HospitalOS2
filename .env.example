# MongoDB Configuration
# Required: MongoDB connection string
MONGO_URL=mongodb://localhost:27017
# Or for MongoDB Atlas:
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Database name (optional, defaults to 'hospital_ops')
DB_NAME=hospital_ops

# JWT Secret
# Required: Secret key for JWT token signing
# Generate a secure secret with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-here-change-this

# OpenAI API Key (optional)
# Required only if using AI features (policy AI, translations, etc.)
OPENAI_API_KEY=sk-...

# OpenAI Translation Model (optional)
# Model to use for translations (defaults to 'gpt-4o-mini')
OPENAI_TRANSLATION_MODEL=gpt-4o-mini

# Translation Provider (optional)
# Options: 'none' or 'openai' (defaults to 'none')
TRANSLATION_PROVIDER=none

# Cron Secret (optional)
# Secret for protecting cron endpoints
# Generate with: openssl rand -base64 32
CRON_SECRET=your-cron-secret-here

# CORS Origins (optional)
# Comma-separated list of allowed origins (defaults to '*')
CORS_ORIGINS=*

# Policies Directory (optional)
# Path to policies storage directory (defaults to 'storage/policies')
POLICIES_DIR=storage/policies

# Base URL (optional)
# Public base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Node Environment
# Automatically set by Next.js, but can be overridden
# NODE_ENV=development
